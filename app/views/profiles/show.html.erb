<div class="row">
  <div class="col-sm-2 col-lg-2 col-md-2 col-xs-2">
    <%= image_tag @user.profile_img, style: 'border-radius:50%;width:100%' %>
  </div>
  <div class="col-sm-8 col-lg-8 col-md-8 col-xs-6 profile-text">
    <a><%= @user.name %>의 프로필</a>
    <% if current_user == @user %>
        <%= link_to '프로필 편집', edit_user_path(@user), class: "btn btn_default profile-edit" %>
    <% else %>
        <%= link_to follow_user_path(@user), method: :put, remote: true do %>
            <% if current_user.following?(@user) %>
                <button class="btn btn-default" style="background: #ffffff;border: solid 1px #dbdbdb;">
                  팔로잉
                </button>
            <% else %>
                <button class="btn btn-primary">팔로우</button>
            <% end %>
        <% end %>
    <% end %>
    <div class="col-sm-8 col-lg-8 col-md-8 col-xs-6 profile-text">
    <span class="profile-text">
      게시물 <%= @user.posts.size %>
    </span>
      <span class="profile-text">
      팔로우 0
    </span>
      <span class="profile-text">
      팔로워 0
    </span>
    </div>
  </div>
</div>

<div class="profile-body">
  <div class="row">
    <% @posts.each do |post| %>
        <a href="<%= post_path(post) %>" class="col-lg-4 col-md-4 col-sm-4 col-xs-4 photo-body" style="border:olivedrab sold 1px">
          <%= image_tag post.img_path.url, style: 'width:100%' %>
        </a>
    <% end %>
  </div>
</div>